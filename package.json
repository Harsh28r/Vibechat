{
  "name": "vibechat-monorepo",
  "version": "1.0.0",
  "description": "VibeChat - Random Video Chat Platform",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm install && npm run build",
    "vercel-build": "cd backend && npm install && cd ../frontend && npm install && npm run build",
    "postinstall": "npm install --prefix backend",
    "start": "cd backend && npm install && node server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Harsh28r/Vibechat.git"
  },
  "keywords": [
    "video-chat",
    "webrtc",
    "socket.io",
    "mern",
    "random-chat",
    "omegle-alternative"
  ],
  "author": "Harsh28r",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

